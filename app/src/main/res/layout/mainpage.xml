<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#354a5b">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgLOGO"
        android:layout_marginTop="100dp"
        android:adjustViewBounds="true"
        android:src="@drawable/logo"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:baselineAlignBottom="false"
        android:layout_marginBottom="10dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="3"
        android:useDefaultMargins="false"
        android:layout_below="@+id/imgLOGO"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/btn_camera"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/btn3"
            android:layout_below="@+id/btn_edit"
            android:layout_toLeftOf="@+id/btn_gallery"
            android:layout_toStartOf="@+id/btn_gallery"
            android:layout_row="1"
            android:layout_column="0" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/btn_tutor"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/btn4"
            android:layout_alignTop="@+id/btn_camera"
            android:layout_alignLeft="@+id/btn_gallery"
            android:layout_alignStart="@+id/btn_gallery"
            android:layout_row="1"
            android:layout_column="1" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_edit"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src ="@drawable/btn1"
            android:layout_alignWithParentIfMissing="false"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_below="@+id/imgLOGO"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="0"
            android:layout_column="0" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/btn_gallery"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/btn2"
            android:layout_above="@+id/btn_tutor"
            android:layout_toRightOf="@+id/btn_edit"
            android:layout_toEndOf="@+id/btn_edit"
            android:layout_row="0"
            android:layout_column="1" />

    </GridLayout>

</RelativeLayout>
